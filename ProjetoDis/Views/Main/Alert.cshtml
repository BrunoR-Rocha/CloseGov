
@{
    ViewBag.Title = "Alert";
}
<h2>Alert</h2>

<div class="container">

    <form action="/Main/Alert" method="POST">
        @{
            Html.RenderPartial("Occurence_Form");   
        }
        <div class="form-group">
            <label for="local">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Enter the Location of the Ocurrance " name="address" required>
        </div>

        <div class="form-group">
            <label for="perigo">Danger</label>
            <br/>
            <select name="perigo">
                <option value="1">Low</option>
                <option value="2">Medium</option>
                <option value="3">High</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit alert</button>
    </form>
</div>