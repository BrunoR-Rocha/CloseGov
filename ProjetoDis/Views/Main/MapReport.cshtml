@using System.Security.Cryptography
@using ProjetoDis.Models
@using ProjetoDis.ProjectClasses.Iterator

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Google maps</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Maps</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Google maps</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                    <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card border-0">
                <div id="map-custom" class="map-canvas" data-lat="40.748817" data-lng="-73.985428" style="height: 600px;"></div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-form" style="overflow-y: visible;" tabindex="-1" role="dialog"
     aria-labelledby="modal-form" aria-hidden="true">
    <div class="modal-dialog modal- modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body p-0" style="overflow-y: visible;">
                <div class="card bg-secondary border-0 mb-0">

                    <div class="card-body px-lg-5 py-lg-5">
                        <form action="/Main/Alert" method="POST">
                            @{
                                Html.RenderPartial("Occurence_Form");
                            }

                            <label class="form-control-label" for="exampleFormControlInput1">Perigo</label>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group" >
                                        <select class="form-control" data-toggle="select" style="position: absolute !important; z-index: 5000;" data-minimum-results-for-search="Infinity" name="perigo">
                                            <option value="3">Alto</option>
                                            <option value="2">Médio</option>
                                            <option value="1">Baixo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-outline-info" data-toggle="sweet-alert" data-sweet-alert="confirm" type="submit">
                                <span class="btn-inner--icon"><i class="ni ni-bell-55"></i></span>
                                <span class="btn-inner--text">Submeter alerta</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<button id="alertModal" style="display: none;" type="button" class="btn btn-block btn-default" data-toggle="modal"
        data-target="#modal-form">
    Form
</button>

