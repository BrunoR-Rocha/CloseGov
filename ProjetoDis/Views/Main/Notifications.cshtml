@using System.Web.UI.WebControls
@using ProjetoDis.Models

@{
    ViewBag.Title = "Notifications";
}

@if (Session["id"] != null)
{
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Default</li>
                            </ol>
                        </nav>
                    </div>

                </div>
                </div>
                </div>
                </div>
    <div class="container-fluid mt--6">
                <div class="row">
                    <div class="col-lg-6 offset-md-3">
                        <div class="card">
                            <div class="card-header bg-transparent">
                                <h3 class="mb-0">Últimas ocorrências</h3>

                            </div>
                    <!-- Card body -->
                    <div class="card-body">
                        <div class="timeline timeline-one-side" data-timeline-content="axis" data-timeline-axis-style="dashed">
                            @foreach (Notification notification in ViewBag.notifications)
                            {
                                <div class="timeline-block">
                                    <span class="timeline-step badge-success">
                                        <i class="ni ni-bell-55"></i>
                                    </span>
                                    <div class="timeline-content">
                                        <div class="d-flex justify-content-between pt-1">
                                            <div>
                                                <span class="text-muted text-sm font-weight-bold">@notification.Title</span>
                                            </div>
                                            <div class="text-right">
                                                <small class="text-muted"><i class="fas fa-clock mr-1"></i>2 hrs ago</small>
                                            </div>
                                        </div>
                                        <h6 class="text-sm mt-1 mb-0">@notification.Description</h6>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                </div>
                </div>
                </div>
                }
                else
                {
                <h2>404 - ERROR - You're not Authenticated</h2>
                }
