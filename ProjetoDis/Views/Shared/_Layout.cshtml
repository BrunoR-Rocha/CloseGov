    <script src="~/Scripts/dropzone.min.js"></script>
    <script src="~/Scripts/bootstrap-notify.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <script src="~/Scripts/list.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDeTFrYHbsau8ouT_8OE-HblFkgP94jtC0"></script>



    <!--  JS -->
    <script src="~/Scripts/argon-dashboard.min.js"></script>
    <script src="https://cdn.trackjs.com/agent/v3/latest/t.js"></script>
    <script>
        window.TrackJS &&
            TrackJS.install({
                token: "ee6fab19c5a04ac1a32a645abde4613a",
                application: "argon-dashboard-free"
            });
    </script>
    <script type="text/javascript">
        $(function () {


            $('.status').change(function () {
                $.ajax({
                    type: 'get',
                    url: '/Main/UpdateAlert',
                    data: {
                        'id': $(this).attr('alert_id'),
                        'status': $(this).val(),
                        'type' : '0'
                    },
                    success: function (data) {
                       
                    }
                });
            });

            $('.comment').blur(function () {
                $.ajax({
                    type: 'get',
                    url: '/Main/UpdateAlert',
                    data: {
                        'id': $(this).attr('alert_id'),
                        'comment': $(this).val(),
                        'type' : '1'
                    },
                    success: function (data) {
                       
                    }
                });
            });





            initMap();

            var todaysDate = new Date(); // Gets today's date

            var year = todaysDate.getFullYear();                        // YYYY
            var month = ("0" + (todaysDate.getMonth() + 1)).slice(-2);  // MM
            var day = ("0" + todaysDate.getDate()).slice(-2);           // DD
            var maxDate = (month + "/" + day + "/" + year);

            $('#datetimepicker1').datetimepicker({
                icons: {
                    time: "fa fa-clock",
                    date: "fa fa-calendar-day",
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down",
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-remove'
                },
                format: 'DD/MM/YYYY',
                maxDate: maxDate

            });

            $("[href='" + window.location.pathname + "']").addClass('active');
            var selectVal;

            $("select").each(function () {
                selectVal = $(this).attr('status');
                $(this).find("option[value='" + selectVal + "']").attr('selected', 'selected');
            });

        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
